<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yang.zhang.mapper.ChatRoomMapper">

    <select id="getUerChatRooms" resultType="org.yang.zhang.module.ChatRoom">
      SELECT
        tc.*
        FROM
            t_chatroom tc
        LEFT JOIN t_chatroom_user tcu ON tc.id = tcu.room_id
        WHERE
            tcu.user_id = #{id}
    </select>

    <select id="getChatRoomUsers" resultType="org.yang.zhang.module.User">
      SELECT
	  *
    FROM
        t_user
    WHERE
        id IN (
            SELECT
                user_id
            FROM
                t_chatroom_member
            WHERE
                room_id = #{id}
        )
    </select>

    <select id="getRecentMessage" resultType="org.yang.zhang.module.RoomChatInfo">
      SELECT
        *
        FROM
            t_room_chatinfo
        WHERE
            room_id = #{id}
        ORDER BY
            message_time ASC
        LIMIT 0,100
    </select>
</mapper>